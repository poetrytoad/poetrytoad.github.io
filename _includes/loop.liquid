{% assign q=include.p %}
{% assign f=include.p.family %}
{% if f.children or p.note or f.note or f.spouse.note %}<a style="cursor:pointer; display:inline-block; margin-right:.1em">
{% else %}<span style="margin-right:.1em">
{% endif %}

{% include name.liquid nam=q %}

{% if f.children %}</a>
{% else %}</span>
{% endif %}

{% if f.spouse %}
  <span class="spouse">
    {% if f.spouse.link %}<a href="{{f.spouse.link}}">{% endif %}
    {% if f.spouse.name %}{% include name.liquid nam=f.spouse %}{% endif %}
    {% if f.spouse.link %}</a>{% endif %}
  </span>
{% endif %}

{% if include.treelink %}
  <a class="branch" title="Go to {{ q.name }}â€™s branch" href="{{include.treelink}}">Branch &rarr;</a>
{% endif %}

