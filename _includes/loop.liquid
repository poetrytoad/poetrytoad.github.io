{% if include.from %}
  {% assign t=include.p.family.spouse %}
  {% assign s=include.p %}
  {% assign f=include.p.family %}
{% else %}
  {% assign t=include.p %}
  {% assign f=include.p.family %}
  {% assign s=include.p.family.spouse %}
{% endif %}

{% if f.children or t.note or f.note or s.note %}<a style="cursor:pointer; margin-right:.1em">
{% else %}<span style="margin-right:.1em">
{% endif %}

{% include name.liquid nam=t %}

{% if f.children %}</a>
{% else %}</span>
{% endif %}

{% if s %}
  <span class="spouse">
    {% if s.link or include.from %}<a
      href="{% if include.from %}../{{ include.from }}/{{ include.treelink }}{% else %}{{ f.spouse.link }}{% endif %}"
      >{% endif %}
    {% if s.name %}{% include name.liquid nam=s %}{% endif %}
    {% if s.link or include.from %}</a>{% endif %}
  </span>
{% endif %}

{% if include.treelink %}
  <a class="branch"
    title="Go to {{ t.name }}â€™s branch"
    href="{% if include.from %}../{{ include.from }}/{% endif %}{{ include.treelink }}">View &rarr;</a>
{% endif %}

{% if t.note or f.note or s.note %}
<p>{{ t.note }} {{ f.note }}</p>
{% endif %}
