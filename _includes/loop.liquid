{% assign q=include.p %}
{% assign f=include.fam %}
{% if f.children %}<a style="cursor:pointer;">
{% else %}<span style="display:inline-block;">
{% endif %}
    <span {% if q.gen %} class="{{ q.gen }}" {% endif %}>{{ q.name }}</span>
    {% if q.sur %}<span class="sur">{{ q.sur }}</span>{% endif %}
    {% if q.born %}<span class="bd">{{ q.born }}
        {% if q.died %}–{{ q.died }} {% else %}—{% endif %}
        </span>
    {% elsif q.died %}
        <span class="bd">†{{ q.died }}</span>
    {% endif %}
    {% if f.spouse %}
        <span class="spouse">
            {% if f.spouse.link %}<a href="{{f.spouse.link}}">{% endif %}
                <span {% if f.spouse.gen %} class="{{ f.spouse.gen }}" {% endif %}>{{ f.spouse.name }}</span>
{% if f.spouse.sur %}<span class="sur">{{ f.spouse.sur }}</span>{% endif %}
                {% if f.spouse.born %}<span class="bd">{{ f.spouse.born }}
                    {% if f.spouse.died %}–{{ f.spouse.died }} {% else %}—{% endif %}
                    </span>
                {% elsif f.spouse.died %}
                    <span class="bd">†{{ f.spouse.died }}</span>
                {% endif %}
            {% if f.spouse.link %}</a>{% endif %}
        </span>
    {% endif %}
{% if q.children %}</a>
{% else %}</span>
{% endif %}
