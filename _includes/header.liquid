{% if include.from %}
  {% assign t=include.p.family.spouse %}
  {% assign s=include.p %}
  {% assign f=include.p.family %}
{% else %}
  {% assign t=include.p %}
  {% assign f=include.p.family %}
  {% assign s=include.p.family.spouse %}
{% endif %}

<h1>
<span style="margin-right:.1em">{% include name.liquid nam=t %}</span>
{% if s %}
  <span class="spouse">
    {% if s.link or include.from %}<a
      href="{% if include.from %}../{{ include.from }}/{{ include.treelink }}{% else %}{{ f.spouse.link }}{% endif %}"
      >{% endif %}
    {% if s.name %}{% include name.liquid nam=s surfrom=include.from %}{% endif %}
    {% if s.link or include.from %}</a>{% endif %}
  </span>
  </h1>
{% endif %}

{% if t.note %}<p><b>{{ t.name }}:</b> {{ t.note }}</p>{% endif %}
{% if s.note %}<p><b>{{ t.name }}:</b> {{ s.note}}</p>{% endif %}
{% if f.note %}<p>{{ f.note }}</p>{% endif %}
