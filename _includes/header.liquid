{% if include.from %}
  {% assign t=include.p.family.spouse %}
  {% assign s=include.p %}
  {% assign f=include.p.family %}
{% else %}
  {% assign t=include.p %}
  {% assign f=include.p.family %}
  {% assign s=include.p.family.spouse %}
{% endif %}

<h1>
{% if t.anc %}<a href="{% t.anc[1] %}" style="margin-right:.1em">
{% else %}<span style="margin-right:.1em">{% endif %}
{% include name.liquid nam=t %}
{% if t.anc %}</a>
{% else %}</span>{% endif %}

{% if s %}
  <span class="spouse">
    {% if s.link or include.from %}<a
      href="{% if include.from %}../{{ include.from }}/{{ include.treelink }}{% else %}{{ f.spouse.link }}{% endif %}"
      >{% endif %}
    {% if s.name %}{% include name.liquid nam=s surfrom=include.from %}{% endif %}
    {% if s.link or include.from %}</a>{% endif %}
  </span>
  </h1>
{% endif %}

{% if t.note or s.note or f.note %}<p>
{% if t.note %}<b>{% if t.nick %}{{ t.nick }}{% else %}{{ t.name }}{% endif %}</b> {{ t.note }} {% endif %}
{% if s.note %}<b>{% if s.nick %}{{ s.nick }}{% else %}{{ s.name }}{% endif %}</b> {% endif %}
{% if f.note %}{{ f.note }}{% endif %}
</p>{% endif %}
